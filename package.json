{
  "name": "fainansu",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "pnpm --filter=api dev",
    "dev:web": "pnpm --filter=web dev",
    "build": "turbo run build",
    "build:api": "pnpm --filter=api build",
    "build:web": "pnpm --filter=web build",
    "start": "pnpm --filter=api start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "clean": "turbo clean && rm -rf node_modules .turbo",
    "clean:full": "turbo run clean && rm -rf node_modules .turbo",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "check-types": "turbo run check-types",
    "db:generate": "pnpm --filter=@workspace/db db:generate",
    "db:push": "pnpm --filter=@workspace/db db:push",
    "db:studio": "pnpm --filter=@workspace/db db:studio",
    "db:seed": "pnpm --filter=@workspace/db db:seed",
    "docker:build": "docker build -t fainansu:latest .",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "docker:clean": "docker compose down -v && docker system prune -f",
    "docker:rebuild": "docker compose down && docker build --no-cache -t fainansu:latest . && docker compose up -d"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "eslint-config-turbo": "^2.7.1",
    "eslint-plugin-turbo": "^2.5.5",
    "prettier": "^3.7.4",
    "turbo": "^2.6.3",
    "typescript": "5.9.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "overrides": {
      "sharp": "^0.33.5",
      "sharp-ico": "^0.1.5"
    }
  }
}
